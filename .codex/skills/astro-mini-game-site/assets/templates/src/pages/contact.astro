---
import SiteLayout from '../layouts/SiteLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';

const title = 'SITE NAME | Contact';
---

<SiteLayout title={title} canonicalPath="/contact">
  <Fragment slot="header"><SiteHeader /></Fragment>

  <section class="space-y-8 border-none">
    <h1 class="text-4xl font-black uppercase italic">Contact</h1>
    <div class="space-y-4 text-sm font-medium leading-loose text-gray-700">
      <p>
        General: <a class="underline font-black text-black" href="mailto:contact@example.com">contact@example.com</a>
      </p>
      <p>DMCA: <a class="underline font-black text-black" href="mailto:dmca@example.com">dmca@example.com</a></p>
    </div>
  </section>

  <Fragment slot="footer"><SiteFooter /></Fragment>
</SiteLayout>

