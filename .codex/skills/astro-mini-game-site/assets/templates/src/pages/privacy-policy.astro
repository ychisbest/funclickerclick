---
import SiteLayout from '../layouts/SiteLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';

const title = 'SITE NAME | Privacy Policy';
const lastUpdated = 'YYYY-MM-DD';
---

<SiteLayout title={title} canonicalPath="/privacy-policy">
  <Fragment slot="header"><SiteHeader /></Fragment>

  <section class="space-y-8 border-none">
    <h1 class="text-4xl font-black uppercase italic">Privacy Policy</h1>
    <p class="text-xs font-bold uppercase tracking-widest text-gray-500">Last Updated: {lastUpdated}</p>

    <div class="space-y-4 text-sm font-medium leading-loose text-gray-700">
      <p>This Privacy Policy explains how we collect, use, and share information when you use this site.</p>
      <h2 class="text-xl font-black uppercase text-black">Advertising</h2>
      <p>
        We may use third-party advertising services such as Google AdSense. These services may use cookies or similar
        technologies to serve ads and measure performance.
      </p>
      <h2 class="text-xl font-black uppercase text-black">Contact</h2>
      <p>
        Questions: <a class="underline font-black text-black" href="mailto:contact@example.com">contact@example.com</a>
      </p>
    </div>
  </section>

  <Fragment slot="footer"><SiteFooter /></Fragment>
</SiteLayout>

