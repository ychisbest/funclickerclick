---
const brand = 'fun clicker';
---

<header class="py-6 px-4 sticky top-0 bg-white/90 backdrop-blur-sm z-50 border-b-4 border-black">
  <nav
    class="max-w-4xl mx-auto flex justify-between items-center font-black text-[10px] uppercase tracking-widest"
  >
    <a href="/" class="text-lg italic tracking-tighter">
      {brand}<span class="text-blue-600">.click</span>
    </a>

    <div class="hidden md:flex gap-8">
      <a href="/#about" class="hover:bg-neo-yellow px-1">About</a>
      <a href="/#mechanics" class="hover:bg-neo-yellow px-1">Mechanics</a>
      <a href="/#characters" class="hover:bg-neo-yellow px-1">Skins</a>
      <a href="/#faq" class="hover:bg-neo-yellow px-1">FAQ</a>
    </div>

    <a
      href="/#game"
      class="bg-black text-white px-4 py-2 hover:translate-x-1 hover:translate-y-1 transition-all shadow-brutal-sm"
    >
      PLAY NOW
    </a>
  </nav>
</header>
